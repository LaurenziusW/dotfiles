    {
  "title": "German Layer (Right Option)",
  "rules": [
    {
      "description": "German Layer: Hold Right Option + a/o/u/s -> ä/ö/ü/ß",
      "manipulators": [
        {
          "description": "Right Option -> German Layer Variable",
          "from": {
            "key_code": "right_option",
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            { "set_variable": { "name": "german_layer", "value": 1 } }
          ],
          "to_after_key_up": [
            { "set_variable": { "name": "german_layer", "value": 0 } }
          ],
          "type": "basic"
        },
        {
          "description": "a -> ä",
          "conditions": [ { "name": "german_layer", "type": "variable_if", "value": 1 } ],
          "from": { "key_code": "a" },
          "to": [ { "key_code": "u", "modifiers": ["left_option"] }, { "key_code": "a" } ],
          "type": "basic"
        },
        {
          "description": "o -> ö",
          "conditions": [ { "name": "german_layer", "type": "variable_if", "value": 1 } ],
          "from": { "key_code": "o" },
          "to": [ { "key_code": "u", "modifiers": ["left_option"] }, { "key_code": "o" } ],
          "type": "basic"
        },
        {
          "description": "u -> ü",
          "conditions": [ { "name": "german_layer", "type": "variable_if", "value": 1 } ],
          "from": { "key_code": "u" },
          "to": [ { "key_code": "u", "modifiers": ["left_option"] }, { "key_code": "u" } ],
          "type": "basic"
        },
        {
          "description": "s -> ß",
          "conditions": [ { "name": "german_layer", "type": "variable_if", "value": 1 } ],
          "from": { "key_code": "s" },
          "to": [ { "key_code": "s", "modifiers": ["left_option"] } ],
          "type": "basic"
        },
        {
          "description": "Shift+a -> Ä",
          "conditions": [ { "name": "german_layer", "type": "variable_if", "value": 1 } ],
          "from": { "key_code": "a", "modifiers": { "mandatory": ["shift"] } },
          "to": [ { "key_code": "u", "modifiers": ["left_option"] }, { "key_code": "a", "modifiers": ["left_shift"] } ],
          "type": "basic"
        },
        {
          "description": "Shift+o -> Ö",
          "conditions": [ { "name": "german_layer", "type": "variable_if", "value": 1 } ],
          "from": { "key_code": "o", "modifiers": { "mandatory": ["shift"] } },
          "to": [ { "key_code": "u", "modifiers": ["left_option"] }, { "key_code": "o", "modifiers": ["left_shift"] } ],
          "type": "basic"
        },
        {
          "description": "Shift+u -> Ü",
          "conditions": [ { "name": "german_layer", "type": "variable_if", "value": 1 } ],
          "from": { "key_code": "u", "modifiers": { "mandatory": ["shift"] } },
          "to": [ { "key_code": "u", "modifiers": ["left_option"] }, { "key_code": "u", "modifiers": ["left_shift"] } ],
          "type": "basic"
        }
      ]
    }
  ]
}