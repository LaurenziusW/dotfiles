#!/usr/bin/env bash
# ==============================================================================
# UKE Gather - Organize windows to correct workspaces
# ==============================================================================
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export UKE_ROOT="${SCRIPT_DIR%/bin}"
source "$UKE_ROOT/lib/core.sh"
source "$UKE_ROOT/lib/wm.sh"

require_cmd yq jq

REGISTRY="$UKE_CONFIG/registry.yaml"

declare -A APP_WS

build_mapping() {
    local ws_list
    ws_list=$(yq -r '.workspaces | keys[]' "$REGISTRY" 2>/dev/null) || return 1
    
    for ws in $ws_list; do
        local app_keys
        app_keys=$(yq -r ".workspaces.$ws.apps // [] | .[]" "$REGISTRY" 2>/dev/null) || continue
        for app_key in $app_keys; do
            local identifier
            if is_macos; then
                identifier=$(yq -r ".apps.$app_key.macos // \"\"" "$REGISTRY" 2>/dev/null)
            else
                identifier=$(yq -r ".apps.$app_key.linux // \"\"" "$REGISTRY" 2>/dev/null)
            fi
            [[ -n "$identifier" ]] && APP_WS["$identifier"]="$ws"
        done
    done
}

gather_macos() {
    local ws="${1:-$(wm_current_workspace)}"
    log_info "Gathering windows for workspace $ws..."
    
    build_mapping
    
    local windows
    windows=$(yabai -m query --windows 2>/dev/null) || { log_error "Failed to query windows"; return 1; }
    
    echo "$windows" | jq -c '.[]' 2>/dev/null | while read -r win; do
        local app_name space
        app_name=$(echo "$win" | jq -r '.app')
        space=$(echo "$win" | jq -r '.space')
        
        for pattern in "${!APP_WS[@]}"; do
            if [[ "$app_name" == *"$pattern"* ]]; then
                local target="${APP_WS[$pattern]}"
                if [[ "$space" != "$target" ]]; then
                    local wid
                    wid=$(echo "$win" | jq -r '.id')
                    log_debug "Moving $app_name to workspace $target"
                    yabai -m window "$wid" --space "$target" 2>/dev/null || true
                fi
                break
            fi
        done
    done
    
    ok "Windows gathered"
}

gather_linux() {
    local ws="${1:-$(wm_current_workspace)}"
    log_info "Gathering windows for workspace $ws..."
    
    build_mapping
    
    local windows
    windows=$(hyprctl clients -j 2>/dev/null) || { log_error "Failed to query windows"; return 1; }
    
    echo "$windows" | jq -c '.[]' 2>/dev/null | while read -r win; do
        local class current
        class=$(echo "$win" | jq -r '.class')
        current=$(echo "$win" | jq -r '.workspace.id')
        
        for pattern in "${!APP_WS[@]}"; do
            if [[ "$class" == *"$pattern"* ]]; then
                local target="${APP_WS[$pattern]}"
                if [[ "$current" != "$target" ]]; then
                    local addr
                    addr=$(echo "$win" | jq -r '.address')
                    log_debug "Moving $class to workspace $target"
                    hyprctl dispatch movetoworkspacesilent "$target,address:$addr" 2>/dev/null || true
                fi
                break
            fi
        done
    done
    
    ok "Windows gathered"
}

is_macos && gather_macos "$@" || gather_linux "$@"
