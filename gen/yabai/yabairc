#!/usr/bin/env bash
# ==============================================================================
# YABAI CONFIG - AUTO-GENERATED BY UKE
# ==============================================================================

yabai -m config layout bsp
yabai -m config window_placement second_child

yabai -m config top_padding    8
yabai -m config bottom_padding 8
yabai -m config left_padding   8
yabai -m config right_padding  8
yabai -m config window_gap     8

yabai -m config mouse_follows_focus on
yabai -m config mouse_modifier alt
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize

yabai -m config window_opacity on
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.95

# ==============================================================================
# Window Rules
# ==============================================================================
yabai -m rule --add app="^.*Safari.*$" space=1
yabai -m rule --add app="^.*Browser.*$" space=1
yabai -m rule --add app="^.*Browser.*$" space=1
yabai -m rule --add app="^.*macapp.*$" space=1
yabai -m rule --add app="^.*obsidian.*$" space=2
yabai -m rule --add app="^.*wezterm.*$" space=3
yabai -m rule --add app="^.*VSCode.*$" space=3
yabai -m rule --add app="^.*Xcode.*$" space=3
yabai -m rule --add app="^.*finder.*$" space=4
yabai -m rule --add app="^.*ForkLift.*$" space=4
yabai -m rule --add app="^.*Preview.*$" space=5
yabai -m rule --add app="^.*PDFExpert-Mac.*$" space=5
yabai -m rule --add app="^.*client.*$" space=7
yabai -m rule --add app="^.*slackmacgap.*$" space=8
yabai -m rule --add app="^.*Discord.*$" space=8
yabai -m rule --add app="^.*mail.*$" space=8
yabai -m rule --add app="^.*Telegram.*$" space=8
yabai -m rule --add app="^.*WhatsApp.*$" space=8
yabai -m rule --add app="^.*Word.*$" space=9
yabai -m rule --add app="^.*Excel.*$" space=9
yabai -m rule --add app="^.*Powerpoint.*$" space=9
yabai -m rule --add app="^.*claudefordesktop.*$" space=10
yabai -m rule --add app="^.*mac.*$" space=10
yabai -m rule --add app="^.*GeminiApp.*$" space=10

# Catch-all rule
yabai -m rule --add app!="^(Safari|Browser|Browser|macapp|obsidian|wezterm|VSCode|Xcode|finder|ForkLift|Preview|PDFExpert-Mac|client|slackmacgap|Discord|mail|Telegram|WhatsApp|Word|Excel|Powerpoint|claudefordesktop|mac|GeminiApp)$" space=6

# Float certain windows
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Karabiner" manage=off
